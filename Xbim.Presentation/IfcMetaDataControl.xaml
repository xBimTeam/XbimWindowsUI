																	</Grid.ColumnDefinitions>
																	<TextBox Text="{Binding Path=Value}"
																		         Margin="2,0"
																		         IsReadOnly="True"
																		         BorderThickness="0" />
																	<TextBlock Grid.Column="1">
																			<Hyperlink NavigateUri="{Binding Path=IfcUri}"
																			           Style="{Binding Source={StaticResource HyperlinkStyle}}">
																				<TextBlock Text=" #" />
